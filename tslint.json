{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rules": {
        "semicolon": true,
        "ordered-imports": false,
        "jsx-boolean-value": false,
        "jsx-no-lambda": false,
        "no-console": false,
        "object-literal-sort-keys": false,
        "only-arrow-functions": false,
        "no-unused-expressions": false
    },
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js",
            "src/libs/**/*.json"
        ]
    }
}
